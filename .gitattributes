*.kicad_pro text eol=lf
*.kicad_prl text eol=lf
*.sch text eol=lf
*.pcb text eol=lf
*.net text eol=lf
*.cmp text eol=lf

# Symbol and footprint libraries
*.lib text eol=lf
*.dcm text eol=lf
*.kicad_sym text eol=lf
